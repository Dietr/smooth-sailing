{# Articles #}
<div class="o-layout__full o-layout c-articles c-graphic">
  <div class="c-graphic__item c-graphic__item--border c-graphic__item--fill c-graphic__item--top" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 6600 3300">
      <path d="M3300,3300 C3300,1477.62596 1822.31257,-0.0240863606 0,-0.0240863606 C1822.31257,-0.0240863606 3300,-1477.24058 3300,-3300 C3300,-1477.24058 4777.63926,-0.0240863606 6600,-0.0240863606 C4777.63926,-0.0240863606 3300,1477.62596 3300,3300"/>
    </svg>
  </div>

  <div class="o-layout__container">
    <div class="o-row-large u-padding-top-none">
      <div class="o-grid">
        {% for article in opinions.medium %}
        <div class="o-grid__item">
          <article class="c-card c-card--article">
            <div class="c-card__image">
              {% image "jpg", article.image, "alt text", "c-image--about" %}
            </div>
            <div class="c-card__main">
              <div class="o-box o-box--large c-rich-text c-card__body">
                <h2><a href="{{ article.externalLink }}" class="c-link c-card__link" target="_blank" rel="noopener noreferrer">{{ article.title }}</a></h2>
                <p>
                  {{ article.excerpt }}
                </p>
              </div>
              <div class="o-box o-box--large u-padding-top-none c-card__footer" aria-hidden="true">
                <p class="c-card__cta">Continue reading</p>
              </div>
            </div>
          </article>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

