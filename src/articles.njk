---
layout: base
title: Articles
---

{# Intro #}
<div class="o-layout__content-left">
  <div class="o-row-large o-flow">
    <h1 class="c-intro">{{title}}</h1>
  </div>
</div>

{# Articles #}
<div class="o-layout__container">
  <div class="o-row-large">
    <div class="o-grid">
      {% for article in collections.articles %}
      <div class="o-grid__item u-1/2@small u-1/3@large">
        <article class="c-card">
          <div class="o-box o-box--large c-rich-text c-card__body">
            <h2><a href="{{ article.url | url }}" class="c-link c-card__link">{{ article.data.title }}</a></h2>
            <p>
              {{ article.data.excerpt }}
            </p>
          </div>
          <div class="o-box o-box--large u-padding-top-none c-card__footer" aria-hidden="true">
            <p class="c-card__cta">Continue reading</p>
          </div>
        </article>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
